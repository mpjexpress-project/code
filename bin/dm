#!/bin/sh
#echo $@
if [ $# -lt 1 ]; then

echo "-b|boot:        Start MPJ Express daemons on given machine(s)"
echo "-h|halt:        Stop MPJ Express deamons on given  machine(s)"
echo "-s|status:      Get status of MPJ Express deamons on given  machine(s)"
echo "-i|info:    	 Get info of all java processes on given  machine(s)"
echo "-c|clean:       Clean all java  process on given machine(s)"
echo "-m|machinefile: Machine File e.g. <machines>"
echo "-ht|hosts:      Host name seperated by space <localhost1 localhost2 ... >"
echo "-nt|nthraeds:   Number of threads"
echo "-th|threaded:   <true|false> use multithreading"
echo "-p|port:        Port no for MPJ Express Deamon listerner"
echo "-help:          Help for process manager command line option"
echo ""
   exit 127
fi 


java -jar $MPJ_HOME/lib/daemonmanager.jar + $@
